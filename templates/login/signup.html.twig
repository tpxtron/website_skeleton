{% extends "_layouts/main.html.twig" %}

{% block css %}
<link rel="stylesheet" type="text/css" href="/static/css/signup.css" />
{% endblock %}

{% block content %}
<div id="container-anmelden">

{% set step = 1 %}
{% include "login/signup_steps.html.twig" %}

<div class="row">
	<div class="col-xs-12 col-md-4 col-md-offset-4">
		<div class="panel panel-primary">
			<div class="panel-heading"><h3>EMail-Adresse und Passwort</h3></div>
			<div class="panel-body">
				<form class="form" role="form" method="post" action="/anmelden">
					<input type="hidden" name="csrf_token" value="{{ csrf_token }}" />
					Für Deine Anmeldung benötigen wir lediglich Deine EMail-Adresse und ein passwort.
					<hr />
					<div class="form-group">
						<input type="email" class="form-control" id="signup_email" name="signup_email" placeholder="ich@beispiel.de" value="{{ email }}">
					</div>
					{% if error.invalidemail %}
						<div class="alert alert-danger">Die von dir eingegebene EMail-Adresse ist nicht gültig.</div>
					{% endif %}
					{% if error.emailtaken %}
						<div class="alert alert-danger">Die von dir eingegebene EMail-Adresse wird bereits verwendet. Hast Du vielleicht Dein <a href="/login/vergessen">Passwort vergessen</a>?</div>
					{% endif %}
					<div class="form-group">
						<button type="submit" class="btn btn-primary pull-right">Weiter...</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

</div>
{% endblock %}
