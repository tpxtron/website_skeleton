{% extends "_layouts/main.html.twig" %}
{% block content %}
<div id="container-login">

<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>Login</h3>
			</div>
			<div class="panel-body">
				<form class="form" role="form" method="post" action="/login">
					<input type="hidden" name="csrf_token" value="{{ csrf_token }}" />
					{% if error %}
						<div class="alert alert-danger">Die von Dir eingegebene Kombination aus Benutzername und Passwort ist nicht korrekt. Hast Du vielleicht Dein <a href="/login/vergessen">Passwort vergessen?</a></div>
					{% endif %}
					<div class="form-group">
						<input type="text" name="username" class="form-control" placeholder="Benutzername" value="{{ email }}" />
					</div>
					<div class="form-group">
						<input class="form-control" name="password" type="password" placeholder="Passwort" />
					</div>
					<button type="submit" class="btn btn-default ladda-button" data-style="expand-right">Login</button>
				</form>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-md-4 col-md-offset-4">
		<div class="panel panel-warning">
			<div class="panel-heading">
				<h3>Du hast noch keinen Account?</h3>
			</div>
			<div class="panel-body">
				<a href="/anmelden" class="btn btn-warning btn-signup center-block">Jetzt anmelden!</a>
			</div>
		</div>
	</div>
</div>


</div>
{% endblock %}
