<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{% block page_head_title %}{{ page.head.title }}{% endblock %}</title>

	<meta name="description" content="{% block page_head_meta_description %}{{ page.head.meta_description }}{% endblock %}">
	<meta name="keywords" content="{% block page_head_meta_keywords %}{{ page.head.meta_keywords }}{% endblock %}">

	<link href="/favicon.ico" rel="icon" />

	<!-- Bootstrap Core CSS -->
    <link href="/static/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

	<link rel="stylesheet" href="/static/css/ladda-themeless.min.css">
	<link rel="stylesheet" href="/static/css/animate.css">

	<!-- Custom Fonts -->
    <link href="/static/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

	<link rel="stylesheet" href="/static/css/common.css">

	{% block css %}{% endblock %}

</head>
<body>

{% block menu %}
{% include("_partials/menu.html.twig") %}
{% endblock %}

	{% if flash.success %}<div class="container"><div class="alert alert-success fade">{{ flash.success }}</div></div>{% endif %}
	{% if flash.error %}<div class="container"><div class="alert alert-danger fade">{{ flash.error }}</div></div>{% endif %}
	{% if flash.warning %}<div class="container"><div class="alert alert-warning fade">{{ flash.warning }}</div></div>{% endif %}
	{% if flash.info %}<div class="container"><div class="alert alert-info fade">{{ flash.info }}</div></div>{% endif %}

	<div class="content">
{% block content %}{% endblock %}
	</div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
				<div class="col-lg-12">
					{% block footer %}
					{% include("_partials/footermenu.html.twig") %}
						{# TODO change copyright owner #}
						<p class="copyright text-muted small">&copy; {{ "now"|date("Y") }} me | <a href="/impressum">{% trans "Impressum/Disclaimer" %}</a> | <a href="/datenschutz">{% trans "Datenschutz" %}</a></p>
					{% endblock %}
                </div>
            </div>
        </div>
    </footer>

	{% block modals %}{% endblock %}

    <!-- jQuery Version 1.11.0 -->
    <script src="/static/js/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/static/js/bootstrap.min.js"></script>

	<script src="/static/js/spin.min.js"></script>
	<script src="/static/js/ladda.min.js"></script>

	<script src="/static/js/common.js"></script>
	{% block js %}{% endblock %}

</body>

</html>
